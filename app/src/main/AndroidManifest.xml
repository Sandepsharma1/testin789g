<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Network permissions for AWS -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-feature android:name="android.hardware.camera" android:required="false" />
    
    <!-- Camera and Audio permissions for Go Live -->
    <!-- Duplicates removed -->
    <uses-feature android:name="android.hardware.camera.front" android:required="false" />
    
    <!-- Push notification and call permissions -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.USE_FULL_SCREEN_INTENT" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:networkSecurityConfig="@xml/network_security_config"
        android:allowBackup="false"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Buddylynk">
        
        <!-- AdMob App ID -->
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-6164570294408123~3341387661"/>
        
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize"
            android:showOnLockScreen="true"
            android:turnScreenOn="true"
            android:launchMode="singleTask"
            android:theme="@style/Theme.Buddylynk">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            
            <!-- Android App Links for app.buddylynk.com (autoVerify requires assetlinks.json on server) -->
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="https"
                    android:host="app.buddylynk.com"
                    android:pathPrefix="/post" />
                <data
                    android:scheme="https"
                    android:host="app.buddylynk.com"
                    android:pathPrefix="/user" />
                <data
                    android:scheme="https"
                    android:host="app.buddylynk.com"
                    android:pathPrefix="/event" />
                <data
                    android:scheme="https"
                    android:host="app.buddylynk.com"
                    android:pathPrefix="/invite/event" />
            </intent-filter>
            
            <!-- Android App Links for buddylynk.com (main domain for Google Ads) -->
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <!-- Root URL - opens app from buddylynk.com homepage -->
                <data
                    android:scheme="https"
                    android:host="buddylynk.com" />
                <data
                    android:scheme="https"
                    android:host="www.buddylynk.com" />
                <!-- Deep links into specific content -->
                <data
                    android:scheme="https"
                    android:host="buddylynk.com"
                    android:pathPrefix="/post" />
                <data
                    android:scheme="https"
                    android:host="buddylynk.com"
                    android:pathPrefix="/user" />
                <data
                    android:scheme="https"
                    android:host="www.buddylynk.com"
                    android:pathPrefix="/post" />
                <data
                    android:scheme="https"
                    android:host="www.buddylynk.com"
                    android:pathPrefix="/user" />
            </intent-filter>
            
            <!-- Custom scheme deep links (buddylynk://) -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="buddylynk" android:host="post" />
                <data android:scheme="buddylynk" android:host="user" />
                <data android:scheme="buddylynk" android:host="event" />
            </intent-filter>
            
            <!-- Firebase Dynamic Links -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="https"
                    android:host="buddylynk.page.link" />
            </intent-filter>
        </activity>
        
        <!-- Firebase Cloud Messaging Service -->
        <service
            android:name=".data.firebase.MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        
        <!-- Call Decline Receiver -->
        <receiver
            android:name=".data.firebase.CallDeclineReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="DECLINE_CALL" />
            </intent-filter>
        </receiver>
        
    </application>

</manifest>