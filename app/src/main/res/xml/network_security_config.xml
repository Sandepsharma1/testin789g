<?xml version="1.0" encoding="utf-8"?>
<!--
    Network Security Configuration for Buddylynk
    Production-ready security settings
    
    SECURITY: All API traffic goes through HTTPS via CloudFront (app.buddylynk.com)
-->
<network-security-config>
    <!-- SECURITY: Block all cleartext (HTTP) traffic -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
    
    <!-- AWS S3/CloudFront for media (HTTPS only) -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">amazonaws.com</domain>
        <domain includeSubdomains="true">cloudfront.net</domain>
        <domain includeSubdomains="true">buddylynk.com</domain>
        <domain includeSubdomains="true">app.buddylynk.com</domain>
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </domain-config>
</network-security-config>
